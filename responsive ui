import 'package:flutter/material.dart';

void main() {
  runApp(ResponsiveUIApp());
}

class ResponsiveUIApp extends StatelessWidget {
  const ResponsiveUIApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Responsive UI Example',
      debugShowCheckedModeBanner: false,
      home: ResponsiveHome(),
    );
  }
}

class ResponsiveHome extends StatelessWidget {
  const ResponsiveHome({super.key});

  @override
  Widget build(BuildContext context) {
    // Use LayoutBuilder to check available screen width
    return Scaffold(
      appBar: AppBar(
        title: Text("Responsive UI Example"),
        centerTitle: true,
      ),
      body: LayoutBuilder(
        builder: (context, constraints) {
          // Define breakpoints
          if (constraints.maxWidth < 600) {
            // Mobile layout
            return MobileLayout();
          } else if (constraints.maxWidth < 1024) {
            // Tablet layout
            return TabletLayout();
          } else {
            // Desktop layout
            return DesktopLayout();
          }
        },
      ),
    );
  }
}

// ðŸ“± Mobile layout
class MobileLayout extends StatelessWidget {
  const MobileLayout({super.key});

  @override
  Widget build(BuildContext context) {
    return Center(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Icon(Icons.phone_android, size: 100, color: Colors.blue),
          SizedBox(height: 20),
          Text(
            "Mobile Layout",
            style: TextStyle(fontSize: 22, fontWeight: FontWeight.bold),
          ),
          Padding(
            padding: const EdgeInsets.all(16.0),
            child: Text(
              "This layout adjusts for small screens (phones).",
              textAlign: TextAlign.center,
            ),
          ),
        ],
      ),
    );
  }
}

// ðŸ’» Tablet layout
class TabletLayout extends StatelessWidget {
  const TabletLayout({super.key});

  @override
  Widget build(BuildContext context) {
    return Row(
      children: [
        Expanded(
          child: Container(
            color: Colors.blue.shade100,
            child: Center(
              child: Icon(Icons.tablet_mac, size: 120, color: Colors.blue),
            ),
          ),
        ),
        Expanded(
          child: Center(
            child: Text(
              "Tablet Layout",
              style: TextStyle(fontSize: 24, fontWeight: FontWeight.bold),
            ),
          ),
        ),
      ],
    );
  }
}

// ðŸ–¥ Desktop layout
class DesktopLayout extends StatelessWidget {
  const DesktopLayout({super.key});

  @override
  Widget build(BuildContext context) {
    return Row(
      children: [
        Expanded(
          child: Container(
            color: Colors.blue.shade50,
            child: Center(
              child: Icon(Icons.desktop_windows, size: 150, color: Colors.blue),
            ),
          ),
        ),
        Expanded(
          child: Center(
            child: Text(
              "Desktop Layout",
              style: TextStyle(fontSize: 26, fontWeight: FontWeight.bold),
            ),
          ),
        ),
        Expanded(
          child: Container(
            color: Colors.blue.shade50,
            child: Center(
              child: Text(
                "Extra panel for large screens",
                style: TextStyle(fontSize: 18),
              ),
            ),
          ),
        ),
      ],
    );
  }
}
